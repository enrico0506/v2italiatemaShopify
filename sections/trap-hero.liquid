<section class="ts-section ts-hero">
  <div class="ts-hero__bg" aria-hidden="true">
    {% if section.settings.image != blank %}
      {{
        section.settings.image
        | image_url: width: 2000
        | image_tag:
          widths: '750, 1100, 1500, 2000',
          sizes: '100vw',
          class: 'ts-hero__img',
          loading: 'eager',
          alt: section.settings.image.alt | default: section.settings.heading
      }}
    {% endif %}
    <div class="ts-hero__overlay"></div>
  </div>

  <div class="ts-container ts-hero__content">
    {% if section.settings.badge != blank %}
      <div class="ts-badge ts-badge--accent">{{ section.settings.badge }}</div>
    {% endif %}

    <h1 class="ts-hero__title">{{ section.settings.heading }}</h1>
    {% if section.settings.subheading != blank %}
      <p class="ts-hero__subtitle">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="ts-hero__actions">
      <a class="ts-button" href="{{ section.settings.primary_link | default: routes.all_products_collection_url }}">
        {{ section.settings.primary_label | default: 'general.actions.shop_now' | t }}
      </a>

      {% if section.settings.secondary_label != blank and section.settings.secondary_link != blank %}
        <a class="ts-button ts-button--secondary" href="{{ section.settings.secondary_link }}">
          {{ section.settings.secondary_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trap Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Immagine background"
    },
    {
      "type": "text",
      "id": "badge",
      "label": "Badge (es. DROP / LIMITED)",
      "default": "DROP LIMITED"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Titolo",
      "default": "TRAP SCURO. MINIMAL. IMPATTANTE."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sottotitolo",
      "default": "Felpe e tee per chi non chiede permesso. High contrast. CTA nette."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "CTA primaria (testo)",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "CTA primaria (link)"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "CTA secondaria (testo)",
      "default": "New drop"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "CTA secondaria (link)"
    }
  ],
  "presets": [
    {
      "name": "Trap Hero"
    }
  ]
}
{% endschema %}

