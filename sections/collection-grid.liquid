<section class="ts-section">
  <div class="ts-container">
    <div class="ts-section__head">
      <h2 class="ts-section__title">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="ts-section__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="ts-grid ts-grid--collections">
      {% for block in section.blocks %}
        {% assign collection = block.settings.collection %}
        <a class="ts-collection-card" href="{{ collection.url }}" {{ block.shopify_attributes }}>
          <div class="ts-collection-card__media">
            {% if collection.featured_image %}
              {{
                collection.featured_image
                | image_url: width: 1200
                | image_tag:
                  widths: '420, 540, 720, 900, 1200',
                  sizes: '(min-width: 990px) 33vw, 100vw',
                  loading: 'lazy',
                  class: 'ts-collection-card__img',
                  alt: collection.featured_image.alt | default: collection.title
              }}
            {% else %}
              <div class="ts-collection-card__img ts-collection-card__img--placeholder"></div>
            {% endif %}
          </div>
          <div class="ts-collection-card__body">
            <div class="ts-collection-card__title">{{ collection.title | default: 'sections.collection_grid.collection' | t }}</div>
            <div class="ts-collection-card__cta">{{ 'general.actions.shop_now' | t }}</div>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titolo",
      "default": "Collections"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sottotitolo",
      "default": "Felpe. Tee. Accessori. Tutto in modalit√† scuro."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Collection grid",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
